{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ],
    "env": {
        "VITE_SUPABASE_KEY": "@vite_supabase_key",
        "OPENROUTER_API_KEY": "@openrouter_api_key",
        "SUPABASE_URL": "@supabase_url"
    }
}